{% extends 'base.html.twig' %}

{% block title %}Publication index
{% endblock %}
{% block body %}
	<div class="container">
		<ul class="nav justify-content-center  ">
			<li class="nav-item">
				<a class="nav-link active" href="{{path('app_publication_new')}}" aria-current="page">Nouvelle article</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{path('app_publication_by_user')}}">Mes articles</a>
			</li>
		</ul>
		<div class="row">
			<div class="card-group">

				{% for publication in publications %}
					<div class="col-3">
						<div class="card" style="height : 100%">
							<div class="card-body">
								<p class="card-text">{{publication.content | slice(0, 80) }}</p>
								<a href="{{path('app_publication_show', { id : publication.id })}}">Voir</a>
								<a href="{{path('app_publication_new', { previous_id : publication.id })}}">RÃ©pondre</a>
								{% include "publication/_edit_button.html.twig"%}

							</div>
							<div class="card-footer">
								<small class="text-muted">{{publication.user}}</small>
								<small class="text-muted">{{publication.date | date}}</small>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
